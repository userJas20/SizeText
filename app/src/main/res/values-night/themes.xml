<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lngs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Dark mode -->
    <!-- Screen background if Dark mode on -->
    <style name="SCREEN">
        <item name="android:background">#232323</item>
    </style>

    <!-- Screen background linear if Dark mode on -->
    <style name="BACKGROUND">
        <item name="android:background">#000000</item>
    </style>

    <!-- Texts background if dark mode on -->
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Text paramÃ©tres if Dark mode on -->
    <style name="TEXTPara">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Button background if dark mode on -->
    <style name="BUTTON">
        <item name="android:background">#FF444444</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>